<div class="homebanner d-flex flex-column justify-content-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1501360575895-3f3f2639fd74?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80);">
  <div class="container">
    <div class="pt-5 pb-1">
      <h2>Need to fix?</h2>
    </div>
    <div>
      <p>Rent a tool just for a few days</p>
    </div>
    <div class="container form-home mt-3">
      <%= form_with url: tools_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :location,
        params[:location],
        class: "form-control",
        placeholder: "Where are you?"
      %>
      <%= submit_tag "Search", class: "home btn btn-primary'" %>
      <% end %>
    </div>
  </div>
</div>


<div class="container how-works mt-5">
  <div class="row justify-content-center text-center">
    <h3>How it works</h3>
    <div class="d-flex justify-content-between">
      <div class="how-img">
        <%= image_tag "renovation.png", class:"m-2" %>
        <p>Choose your tool</p>
      </div>
      <div class="how-img">
        <%= image_tag "booking.png", class:"m-2" %>
        <p>Book it</p>
      </div>
      <div class="how-img">
        <%= image_tag "carpenter.png", class:"m-2" %>
        <p>Take it</p>
      </div>
    </div>
  </div>
</div>
