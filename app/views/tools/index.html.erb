<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.milium.com.br/wp-content/uploads/2020/10/Banner-Blog-Post-Milium-Out20-02.jpg);">
  <div class="container">
    <h1>Tools For You</h1>
        <p>Don't stop your work, rent a tool!</p>
        <%= link_to "Join us",  new_user_session_path, class:"btn btn-flat"%>
  </div>
</div>

<div class="container form mt-3">
<%= form_with url: tools_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a tool"
  %>
  <%= text_field_tag :location,
    params[:location],
    class: "form-control",
    placeholder: "City?"
  %>
  <%= submit_tag "Search", class: "btn brown'" %>
<% end %>
</div>



<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Tools for rent</h3>
    <%= link_to "Add a tool for rent", new_tool_path, class: "btn brown" %>
  </div>
  <div class="row">
    <% @tools.each do |tool| %>
        <div class="col-3 mb-5">
          <div class="card-trip">
              <%# <%= cl_image_tag plant.photo.key, class:"figure-img img-fluid rounded" %>
              <% if tool.photo.key.nil? %>
              <%= image_tag 'https://images.unsplash.com/photo-1540103711724-ebf833bde8d1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1476&q=80'%>
              <% else %>
              <%= cl_image_tag tool.photo.key %>
              <% end %>
            <div class="card-trip-infos">
              <div>
                <h2 class="card-title"><%= tool.name.upcase %></h2>
                <p><%= tool.description.capitalize %></p>
              </div>
              <h2 class="card-trip-pricing">U$ <%= tool.price %></h2>
            </div>
            <%= link_to "More details", tool_path(tool), class: "btn brown w-100"%>
          </div>
        </div>
    <% end %>
  </div>
</div>
